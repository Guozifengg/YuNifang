<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="20dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll1"
        android:layout_above="@+id/ll2"
        >
        <ListView
            android:layout_below="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/carLv"
            android:layout_above="@+id/ll2"></ListView>
        <RelativeLayout
            android:id="@+id/emptyCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            >
            <ImageView
                android:id="@+id/car"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shopping_trolley_empty"/>
            <TextView
                android:id="@+id/textView"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="购物车还是空的哦快去逛逛吧！"
                android:layout_below="@+id/car"/>

            <TextView
                android:id="@+id/back_sy"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="逛一逛"
                android:textSize="16dp"
                android:textColor="#fff"
                android:background="@drawable/jiesuan_bj"/>
        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/checkAll"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:textColor="#fc6b87"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计: ￥" />

            <TextView
                android:textColor="#fc6b87"
                android:textSize="20dp"
                android:id="@+id/tv_price"
                android:layout_gravity="center_vertical"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="0.00" />
            <TextView
                android:id="@+id/jieSuan"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_vertical"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:text="结算"
                android:textColor="#fff"
                android:background="@drawable/jiesuan_bj"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>