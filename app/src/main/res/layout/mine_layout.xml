<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

                <TextView
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人中心"/>
                <ImageView
                    android:id="@+id/iv_shezhi"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/settings_normal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@mipmap/user_info_bg"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/qqImg"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@mipmap/user_icon_default"
                            />
                        <TextView
                            android:id="@+id/qqName"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:text="点击登"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dengLuLl"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@mipmap/user_info_bg"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@mipmap/user_icon_default"
                            />
                        <TextView
                            android:id="@+id/dengLu"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:text="点击登录"/>
                </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="0.99"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/wait_pay"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="待付款"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/wait_send_good"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="待发货"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/wait_receive_good"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="待收款"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/wait_evaluate"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="待评价"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/wait_refund"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="退款"/>
                </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/my_order_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="15sp"
                            android:text="我的订单"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/next_icon"/>

                </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/my_coupon_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="15sp"
                            android:text="我的现金库"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/next_icon"/>

                </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/my_coupon_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="15sp"
                            android:text="我的抽奖单"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/next_icon"/>

                </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/personal_center_contact_service_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="15sp"
                            android:text="联系客服"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/next_icon"/>

                </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fff"
            >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/my_collection_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:textSize="15sp"
                            android:text="我收藏的商品"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentRight="true"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/next_icon"/>
                </RelativeLayout>
        </LinearLayout>

</LinearLayout>